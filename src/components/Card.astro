---
const {
	title = 'Calculator',
	imageUrl = 'icon-calculator.svg',
	color = 'red-border',
	text = 'Uses data from past projects to provide better delivery estimates',
} = Astro.props;
---

<div class='card' class:list={color}>
	<h2>{title}</h2>
	<p>{text}</p>
	<img src=`images/${imageUrl}` alt=`${title} icon` />
</div>

<style>
	.card {
		display: flex;
		flex-direction: column;
		position: relative;
		width: 350px;
		height: 250px;
		background-color: var(--white);
		box-shadow: 0 5px 40px -10px var(--greyshBlue);
		border-radius: 10px;
	}

	h2 {
		padding: 25px 25px 15px 25px;
	}

	p {
		padding: 0 25px;
		max-width: 300px;
		font-size: 14px;
	}

	img {
		position: absolute;
		bottom: 15px;
		right: 15px;
	}

	.cyan-border {
		border-top: 4px solid var(--cyan);
	}

	.red-border {
		border-top: 4px solid var(--red);
	}

	.orange-border {
		border-top: 4px solid var(--orange);
	}

	.blue-border {
		border-top: 4px solid var(--blue);
	}

	@media (max-width: 1200px) {
		.card {
			width: auto;
		}
	}
</style>
